<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:id="@+id/home_comment_image"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="left|bottom"
        android:layout_toRightOf="@+id/home_comment_image"
        android:id="@+id/home_comment_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="To Sanjeevani via "/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:layout_toRightOf="@+id/home_comment_image"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/home_comment_name"
        android:id="@+id/home_comment_content"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:text="Burgers, fries and coke "/>


</RelativeLayout>