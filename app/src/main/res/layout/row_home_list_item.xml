<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="70dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/a2b"
        android:id="@+id/home_res_image"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="left|bottom"
        android:layout_toRightOf="@+id/home_res_image"
        android:id="@+id/home_res_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="To Sanjeevani via "/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="left|top"
        android:layout_toRightOf="@+id/home_res_image"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/home_res_name"
        android:id="@+id/home_res_items"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:text="Burgers, fries and coke "/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="via"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_toRightOf="@id/home_res_items"
        android:id="@+id/home_via"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/o_auto"
        android:layout_below="@+id/home_via"
        android:layout_toRightOf="@id/home_res_items"
        android:id="@+id/home_ola_icon"/>
</RelativeLayout>