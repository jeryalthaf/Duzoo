<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.duzoo.android.fragment.SignUpFragment">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/ic_launcher"
        android:id="@+id/signuptext"
        android:textColor="@color/app_color"
        android:textSize="48sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter 4 digit invite code"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:gravity="center"
        android:id="@+id/invite_code"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_code"
        android:text="Submit"
        android:gravity="center"
        android:id="@+id/submit_code"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_bg_green"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>